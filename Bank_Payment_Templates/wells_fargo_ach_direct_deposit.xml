</#list>
<FileInfoGrp FileDate="${pfa.custrecord_2663_file_creation_timestamp?string("yyyy-MM-dd")}" FileControlNumber="${pfa.id}"/>
</File><#rt>
#OUTPUT END#
#RETURN START#
sequenceId:${newSeqId}
#RETURN END#